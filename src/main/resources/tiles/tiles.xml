<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="admin-layout" template="/WEB-INF/tiles/admin/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/admin/header.jsp" />
		<put-attribute name="css" expression="/WEB-INF/views/tiles/css.jsp" />
		<put-attribute name="body"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/admin/footer.jsp" />
	</definition>

	<definition name="user-layout" template="/WEB-INF/tiles/user/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/user/header.jsp" />
		<put-attribute name="css" expression="/WEB-INF/views/tiles/css.jsp" />
		<put-attribute name="body"/>
		<put-attribute name="footer" value="/WEB-INF/tiles/user/footer.jsp" />
	</definition>

	<!-- 
		 접미어가 web인 대상들만 tiles 적용
		 */* 방식으로 지정하여 접미어 상관없이 전체적용가능
	 -->

	<definition name="/*.admin" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}.jsp" />
	</definition>

	<definition name="/*/*.admin" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}.jsp" />
	</definition>

	<definition name="/*/*/*.admin" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}/{3}.jsp" />
	</definition>

	<definition name="/*/*/*/*.admin" extends="admin-layout">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}/{3}/{4}.jsp" />
	</definition>

	
	<definition name="/*.user" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/user/{1}.jsp" />
	</definition>

	<definition name="/*/*.user" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/user/{1}/{2}.jsp" />
	</definition>

	<definition name="/*/*.user" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/user/{1}/{2}.jsp" />
	</definition>

	<definition name="/*/*/*.user" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/user/{1}/{2}/{3}.jsp" />
	</definition>

	<definition name="/*/*/*.user" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/user/{1}/{2}/{3}.jsp" />
	</definition>

	<definition name="/*/*/*/*.user" extends="user-layout">
		<put-attribute name="body" value="/WEB-INF/views/user/{1}/{2}/{3}/{4}.jsp" />
	</definition>
</tiles-definitions>